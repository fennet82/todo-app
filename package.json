{
  "name": "@todo-app/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run db:up\" \"npm run api:dev\" \"npm run client:dev\"",
    "start": "concurrently \"npm run api:start\" \"npm run client:start\"",
    "build": "nx run-many --target=build --projects=api,client --parallel",
    "test": "nx run-many --target=test --projects=api,client,shared --parallel",
    "test:watch": "nx run-many --target=test --projects=api,client,shared --parallel --watch",
    "test:e2e": "nx run api-e2e:e2e",
    "lint": "nx run-many --target=lint --projects=api,client,shared --parallel",
    "lint:fix": "nx run-many --target=lint --projects=api,client,shared --parallel --fix",
    "api:dev": "nx serve api",
    "api:start": "nx serve api --prod",
    "api:build": "nx build api",
    "api:test": "nx test api",
    "api:test:watch": "nx test api --watch",
    "api:lint": "nx lint api",
    "client:dev": "nx serve client",
    "client:start": "nx serve client --prod",
    "client:build": "nx build client",
    "client:test": "nx test client",
    "client:test:watch": "nx test client --watch",
    "client:lint": "nx lint client",
    "shared:build": "nx build shared",
    "shared:test": "nx test shared",
    "shared:test:watch": "nx test shared --watch",
    "shared:lint": "nx lint shared",
    "db:up": "docker-compose up mongo -d",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f mongo",
    "db:shell": "docker exec -it mongo-db mongosh --host localhost --port 27017 -u admin -p password --authenticationDatabase admin",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "clean": "nx reset && rimraf dist node_modules apps/*/node_modules libs/*/node_modules",
    "clean:install": "npm run clean && npm install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "graph": "nx graph",
    "prepare": "husky install || true"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/eslint": "20.3.1",
    "@nx/eslint-plugin": "20.3.1",
    "@nx/jest": "20.3.1",
    "@nx/js": "20.3.1",
    "@nx/nest": "^20.3.1",
    "@nx/node": "20.3.1",
    "@nx/react": "^20.3.1",
    "@nx/vite": "20.3.1",
    "@nx/web": "20.3.1",
    "@nx/webpack": "20.3.1",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.3.12",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/react": "15.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.3.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsdom": "~22.1.0",
    "nx": "20.3.1",
    "prettier": "^2.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "~3.8.1",
    "vitest": "^1.3.1",
    "webpack-cli": "^5.1.4"
  },
  "workspaces": [
    "libs/**",
    "packages/**",
    "apps/**"
  ],
  "dependencies": {
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/platform-express": "^10.0.2",
    "axios": "^1.6.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  }
}
